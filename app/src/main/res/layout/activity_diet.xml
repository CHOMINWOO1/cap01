<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:weightSum="10" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="280dp" android:layout_width="match_parent" android:background="@drawable/background_gradient"/>


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:orientation="vertical" android:layout_height="0dp" android:layout_width="match_parent" android:gravity="center" android:layout_weight="1">

    <ImageView android:layout_height="100dp" android:layout_width="100dp" android:background="@drawable/healthcare"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25dp" android:textColor="#FFF" android:text="식사" android:layout_marginTop="20dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="2">


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="0dp" android:gravity="center_horizontal" android:layout_weight="1">

    <ImageButton android:layout_height="150dp" android:layout_width="150dp" android:background="#FFF" android:id="@+id/foodMoring" app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintBottom_toTopOf="@+id/foodlunch" android:src="@drawable/breakfast"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="아침식사"/>

    <ImageButton android:layout_height="150dp" android:layout_width="150dp" android:background="#FFF" android:layout_marginTop="30dp" android:id="@+id/foodDinner" app:layout_constraintStart_toStartOf="parent" android:src="@drawable/dinner" app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="저녁식사"/>

</LinearLayout>


   <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="0dp" android:gravity="center_horizontal" android:layout_weight="1">

    <ImageButton android:layout_height="150dp" android:layout_width="150dp" android:background="#FFF" android:src="@drawable/lunch"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="점심식사" android:id="@+id/foodlunch" app:layout_constraintStart_toStartOf="@+id/foodDinner" app:layout_constraintBottom_toTopOf="@+id/foodDinner"/>

