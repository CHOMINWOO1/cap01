    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="00" android:id="@+id/textView8" app:layout_constraintBottom_toTopOf="@+id/foodMoring" app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginBottom="36dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="00" app:layout_constraintBottom_toTopOf="@+id/foodMoring" app:layout_constraintStart_toEndOf="@+id/textView7"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="100dp" android:text="Home" android:layout_marginTop="680dp" android:id="@+id/buttonHome" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <Button android:layout_height="wrap_content" android:layout_width="100dp" android:text="걸음수" android:layout_marginTop="680dp" android:id="@+id/buttonSteps" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="100dp" android:layout_marginStart="100dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="100dp" android:text="통계" android:layout_marginTop="680dp" android:id="@+id/buttonStats" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="200dp" android:layout_marginStart="200dp" app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/buttonDiet"/>

    <Button android:layout_height="wrap_content" android:layout_width="100dp" android:text="식단" android:layout_marginTop="680dp" android:id="@+id/buttonDiet" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="308dp" android:layout_marginStart="308dp" android:enabled="false"/>

