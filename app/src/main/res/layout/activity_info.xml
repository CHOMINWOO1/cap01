<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <ImageView android:layout_height="0dp" android:layout_width="match_parent" android:background="@drawable/background_gradient" android:layout_weight="1"/>

    <ImageView android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/white_gradient" android:padding="20dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:layout_marginRight="20dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="키"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etHeight" android:hint="입력하세요" android:drawableRight="@drawable/ic_perm_identity_black_24dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="몸무게" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etGoalWeight" android:hint="입력하세요" android:drawableRight="@drawable/ic_perm_identity_black_24dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="목표체중" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/etWeight" android:hint="입력하세요" android:drawableRight="@drawable/ic_perm_identity_black_24dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@drawable/rec_gradient" android:text="저장" android:id="@+id/btnSave" android:layout_marginTop="20dp" android:textSize="20dp" android:textColor="#FFF"/>

</LinearLayout>

    <ImageView android:layout_height="100dp" android:layout_width="100dp" android:layout_centerHorizontal="true" android:layout_marginTop="40dp" android:src="@drawable/healthcare"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:text="환영합니다." android:id="@+id/TextView1" android:layout_marginTop="150dp" android:textSize="30sp" android:textColor="#FFF"/>

</RelativeLayout>